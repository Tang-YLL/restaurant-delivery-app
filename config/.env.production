# 生产环境配置
# 请根据实际情况修改这些值

# 数据库配置
DB_PASSWORD=your_strong_db_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_strong_db_password_here@postgres:5432/restaurant_db

# Redis配置
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_URL=redis://:your_strong_redis_password_here@redis:6379/0

# JWT密钥(必须修改)
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用配置
APP_NAME=餐厅管理系统
DEBUG=False
ENVIRONMENT=production

# CORS配置(生产环境只允许特定域名)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 静态文件路径
STATIC_FILES_PATH=/app/static

# 短信验证码配置(示例)
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=your_sms_sign

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# 管理员配置(初始化)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com

# 监控和告警(可选)
SENTRY_DSN=your_sentry_dsn_if_using_sentry
ENABLE_METRICS=True

# 邮件配置(可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com
